<%- include('../partials/header') %>


<body>
    <h1>Flight List</h1>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over movies using forEach -->
            <% flights.forEach(function(f) {%>
            <tr>
                <td>
                    <form action="/flights/<%= f.id %>?_method=DELETE" class="delete-form" method="POST">
                        <button class="X" type="submit">X</button>
                    </form>
                </td>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id %>">DETAILS</a></td>

            </tr>
            <!-- Close the forEach using EJS here -->
            <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>