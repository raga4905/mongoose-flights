<%- include('../partials/header') %>

<nav class="nav">
    <a href="/flights/new" <%- title === 'Add Flight' ? 'class="active"' : '' %>>ADD FLIGHT</a>
    <a href="/flights" <%- title === 'All Flights' ? 'class="active"' : '' %>>ALL FLIGHTS</a>
</nav>

<h1>Ticket Information</h1>
<section class="ticket-details"></section>
<form class="create-ticket" action="/flights/<%= flight %>/tickets" method="POST">
    <!-- this connects to routes which sets the params and then the controllers use the params (:id), flight is the id here  -->
    <label>Pick Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label>Price</label>
    <input type="number" name="price" min='0'>
    <br />
    <input type="submit" value="Create Ticket">
    
</form>
</section>

